{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "outDir": "./",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "./**/*.ts"
    ], // Files to include in compilation
    "exclude": [
        "node_modules",
        "dist"
    ] // Files and directories to exclude
}